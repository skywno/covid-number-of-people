<?xml version="1.0"?>
<thlogic>
    <attr sel="#locationTitle" th:text="'장소 상세 - 관리자'" />
    <attr sel="#locationTable" th:object="${location}">
        <attr sel="#locationType" th:remove="all-but-first" th:required="true">
            <attr sel="option" th:each="type : ${locationType}" th:value="${type}" th:text="${type}" />
        </attr>
        <attr sel="#locationName" th:value="*{locationName}" />
        <attr sel="#address" th:value="*{address}" />
        <attr sel="#phoneNumber" th:value="*{phoneNumber}" th:pattern="'[0-9]{2,3}-[0-9]{3,4}-[0-9]{4}'"
              th:oninvalid="'this.setCustomValidity(\'전화번호 형식을 맞춰주세요 (ex: 000-0000-0000)\')'" />
        <attr sel="#capacity" th:value="*{capacity}" th:min="0" />
    </attr>
    <attr sel="#saveLocation" th:form="locationForm" th:formaction="@{/admin/locations}" th:formmethod="post" />
    <attr sel="#backToLocations" th:onclick="'location.href=\'' + @{/admin/locations} + '\''" />
</thlogic>